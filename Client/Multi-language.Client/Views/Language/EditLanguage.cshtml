<div class="form-group">
    <label class="col-sm-2 control-label" for="langIsActive">Is Active</label>

    <div class="checkbox col-sm-10">
            <input type="checkbox" id="langIsActive"  ng-model="Language.IsActive">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="langUsername">User name</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="langUsername" placeholder="User name" value="@User.Identity.Name" ng-model="Language.UserName"  disabled>
    </div>
</div>
<input class="btn btn-primary center-block" type="button" value="Save" ng-click="save()" />

<div class="text-danger">{{error}}</div>
<script>
        $(function () {
            $('#langIsActive').iCheck({
    checkboxClass: 'icheckbox_square-blue',
    radioClass: 'iradio_square',
    increaseArea: '20%' // optional
  });
        })
    
</script>