
<div class="form-group">
    <label class="col-sm-2 control-label" for="langName">Name</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="langName" placeholder="Language Name"  ng-model="Language.Name" >
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="langInitials">Initials</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="langInitials" placeholder="Initials" ng-model="Language.Initials" >
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label" for="langCulture">Culture</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="langCulture" placeholder="Culture" ng-model="Language.Culture" >
    </div>
</div>

