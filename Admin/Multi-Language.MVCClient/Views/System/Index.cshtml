
@using Multi_language.Common
@model Multi_Language.MVCClient.Models.UtilitiesViewModels.SystemViewModels
<div class="row">
    <div class="col-md-4">

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Disk Space</h3>

            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="chart-responsive">
                        <canvas id="pieChartSystemSpace" height="250"></canvas>
                    </div><!-- ./chart-responsive -->
                </div><!-- /.row -->
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
    <div class="col-md-4">

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">System info</h3>

            </div><!-- /.box-header -->
            <div class="box-body">

                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <td>Up Time</td>
                        <td>@Model.UpTime</td>
                    </tr>
                    <tr>
                        <td>Disk space</td>
                        <td>@Model.DiskSpaceUsed</td>
                    </tr>
                    <tr>
                        <td>Data API Version</td>
                        <td>@Model.DataApiVersion</td>
                    </tr>
                    <tr>
                        <td>Ip</td>
                        <td>@Model.Ip</td>
                    </tr>
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    <div class="col-md-4">

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Authentication</h3>

            </div><!-- /.box-header -->
            <div class="box-body">

                <div class="info-box">
                    <span class="info-box-icon bg-yellow">
                        <i class="fa fa-key"></i>
                    </span>
                    <div class="info-box-content">
                            <h3 class="no-padding">Bearer token: </h3>
                            <q>
                                Model.BearerToken.Substring(0, 40) ...
                            </q>

                    </div>
                </div>

            <button class="btn btn-warning btn-lg" onclick="">Refresh authentication token</button>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

