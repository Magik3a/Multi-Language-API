
@using Multi_language.Common

<div class="row">
    <div class="col-md-6">

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Disk Space</h3>

            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="chart-responsive">
                        <canvas id="pieChartSystemSpace" height="250"></canvas>
                    </div><!-- ./chart-responsive -->
                </div><!-- /.row -->
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
    <div class="col-md-6">

        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">System info</h3>

            </div><!-- /.box-header -->
            <div class="box-body">

                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td>Up Time</td>
                                <td>@Utils.GetSystemUpTime()</td>
                            </tr>
                            <tr>
                                <td>Disk space</td>
                                <td>@Utils.GetDiskSpaceUsedString()</td>
                            </tr>
                            <tr>
                                <td>Client Version</td>
                                <td>1.0.0.0</td>
                            </tr>
                            <tr>
                                <td>Data API Version</td>
                                <td>1.0.0.0</td>
                            </tr>
                            <tr>
                                <td>Ip</td>
                                <td>@Utils.GetLocalIpV4()</td>
                            </tr>
                        </tbody>
                    </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

