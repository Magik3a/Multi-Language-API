
@model Multi_Language.MVCClient.Models.ResourcesViewModels

@{
    ViewBag.Title = "Create";
}

<!-- Default box -->
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Create new translation</h3>
    </div>
    <div class="box-body">

        @using (Ajax.BeginForm("Create", "Resources", null, new AjaxOptions { }, null))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.Raw(Html.ValidationSummary(true, "", new { @class = "text-danger" }))
                <div class="form-group">
                    @Html.LabelFor(model => model.PhraseContext.Context, "IdPhraseContext", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdPhraseContext", null, htmlAttributes: new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.IdPhraseContext, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Language.Name, "IdLanguage", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdLanguage", null, htmlAttributes: new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.IdLanguage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhraseText, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PhraseText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhraseText, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- /.box -->


<div class="info-box bg-green box-ajax-success" style="display: none">
    <span class="info-box-icon"><i class="fa fa-thumbs-o-up"></i></span>

    <div class="info-box-content">
        <span class="info-box-text">
            <strong>Success!</strong>
        </span>

        <small>You created new project</small>
        <hr class="no-padding" style="margin: 0 0 5px 0" />
        <button class="btn btn-success right text-uppercase collapsed"
               data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false">
            Continue with next step
        </button>
    </div>
    <!-- /.info-box-content -->

</div>