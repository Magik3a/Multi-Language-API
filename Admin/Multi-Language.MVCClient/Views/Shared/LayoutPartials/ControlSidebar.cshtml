
<style type="text/css">
    .highCpu {
        background: red;
        color: white;
    }
</style>

<aside class="control-sidebar control-sidebar-dark">
    <!-- Create the tabs -->
    <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
        <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
        @*<li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>*@
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <!-- Home tab content -->
        <div class="tab-pane active" id="control-sidebar-home-tab">

            <h3 class="control-sidebar-heading">Real-time System Resource Monitor</h3>

            <h5 data-bind="visible: connected" class="">Connected to internal hub <q>Refreshes every minute</q></h5>
            <ul class="control-sidebar-menu">
                <li id="computerInfo">


                    <!-- ko foreach: machines -->
                    <a href="#">
                        <i class="menu-icon fa fa-laptop bg-red"></i>

                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Machine</h4>

                            <p data-bind="text: machineName"></p>
                        </div>
                    </a>
                    <a href="#">
                        <i class="menu-icon fa fa-bar-chart bg-red"></i>

                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Memory Available (Mb)</h4>

                            <p data-bind="text: memUsage"></p>
                        </div>
                    </a>
                    <a href="#">
                        <i class="menu-icon fa fa-server bg-red"></i>

                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Total Memory (Mb)</h4>

                            <p data-bind="text: memTotal"></p>
                        </div>
                    </a>
                    <a href="#">
                        <h4 class="control-sidebar-subheading">
                            CPU %
                            <span class="pull-right-container">
                                <span data-bind="text: cpu" class="label label-danger pull-right"></span>
                            </span>
                        </h4>

                        <div class="progress progress-xxs">
                            <div class="progress-bar progress-bar-danger" data-bind="style: {width: cpu()}"></div>
                        </div>
                    </a>
                    <a href="#">
                        <h4 class="control-sidebar-subheading">
                            Mem Available %
                            <span class="pull-right-container">
                                <span data-bind="text: memPercent" class="label label-danger pull-right"></span>
                            </span>
                        </h4>

                        <div class="progress progress-xxs">
                            <div class="progress-bar progress-bar-danger" data-bind="style: {width: memPercent()}"></div>
                        </div>
                    </a>
                    <!-- /ko -->
                </li>
            </ul>

            <!-- /.control-sidebar-menu -->

        </div>
        <!-- /.tab-pane -->
        <!-- Stats tab content -->
        <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
        <!-- /.tab-pane -->
        <!-- Settings tab content -->
        <div class="tab-pane" id="control-sidebar-settings-tab">
            <form method="post">
                <h3 class="control-sidebar-heading">General Settings</h3>

                <div class="form-group">
                    <label class="control-sidebar-subheading">
                        Report panel usage
                        <input type="checkbox" class="pull-right" checked>
                    </label>

                    <p>
                        Some information about this general settings option
                    </p>
                </div>
                <!-- /.form-group -->
            </form>
        </div>
        <!-- /.tab-pane -->
    </div>
</aside>