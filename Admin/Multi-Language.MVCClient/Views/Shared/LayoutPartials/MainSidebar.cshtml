
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="pull-left image">
                    <img src="~/Images/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">

                    <p>@User.Identity.Name</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            }
            else
            {
                <div class="pull-left image">
                    <img src="~/Images/Socials/icons/apple-touch-icon-152x152.png" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">

                    <p>Anonymous access!</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-danger"></i> Offline</a>
                </div>
            }

        </div>

        <!-- search form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <!-- Optionally, you can add icons to the links -->

            <li>
                @Ajax.RawActionLink("Projects", "fa-globe", "Index", "Projects", null, new AjaxOptions { }, null)
            </li>
            <li class="header">MULTI LANGUAGE</li>

            <li>
                @Ajax.RawActionLink("Languages", "fa-language", "Index", "Languages", null, new AjaxOptions { }, null)
            </li>
            <li>
                @Ajax.RawActionLink("Contexts", "fa-cube", "Index", "Contexts", null, new AjaxOptions { }, null)
            </li>
            <li>
                @Ajax.RawActionLink("Translations", "fa-cubes", "Index", "Resources", null, new AjaxOptions { }, null)
            </li>

            @*<li class="treeview">
                    <a href="#">
                        <i class="fa fa-link"></i> <span>Multilevel</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li>
                            @Ajax.RawActionLink("About", "fa-user", "About", "Home", null, new AjaxOptions { }, null)


                        </li>
                    </ul>
                </li>*@

            <li class="header">UTILITIES</li>
            <li>
                @Ajax.RawActionLink("Backups", "fa-database", "Index", "Backups", null, new AjaxOptions { }, null)
            </li>
            <li>
                @Ajax.RawActionLink("System", "fa-desktop", "Index", "System", null, new AjaxOptions { }, null)
            </li>
            <li class="header">DOCUMENTATION</li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-book"></i> <span>Multi-Language</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li>
                        @Ajax.RawActionLink("Getting started", "fa-circle-o", "GettingStarted", "Documentation/Multilanguage", null, new AjaxOptions {  }, null, true)

                    </li>
                    <li><a href="#"><i class="fa fa-circle-o"></i> Integration</a></li>
                    <li><a href="#"><i class="fa fa-circle-o"></i> FAQ</a></li>

                </ul>
            </li>
            <li>
                @Ajax.RawActionLink("About", "fa-address-card-o", "Index", "About", null, new AjaxOptions { }, null, true)
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->


</aside>