@model Multi_Language.MVCClient.Models.ResourcesViewModels
@{
    ViewBag.Title = "Details";
}

<!-- Default box -->
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Details</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body">

        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Language.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Language.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhraseContext.Context)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhraseContext.Context)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.User.UserName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhraseText)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhraseText)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateChanged)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateChanged)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>

            </dl>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        @Ajax.RawActionLinkWithoutIcon("Edit", "fa-cubes", "Edit", "Resources", new { id = Model.IdPhrase }, new AjaxOptions { }, new { @class = "" })

        |
        @Ajax.RawActionLinkWithoutIcon("Back to list", "fa-cubes", "Index", "Resources", null, new AjaxOptions { }, null)

    </div>
    <!-- /.box-footer-->
</div>
<!-- /.box -->