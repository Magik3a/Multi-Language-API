@model Multi_Language.MVCClient.Models.ResourcesViewModels

@{
    ViewBag.Title = "Delete";
}

<!-- Default box -->
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Delete</h3>

        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body">


        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Language.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Language.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhraseContext.UserId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhraseContext.UserId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.User.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PhraseText)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhraseText)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateChanged)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateChanged)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>

            </dl>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            @using (Ajax.RawAjaxBeginForm("fa-cubes", "Delete", "Resources", new { id = Model.IdPhrase }, new AjaxOptions { }, null))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Ajax.RawActionLinkWithoutIcon("Back to list", "fa-cubes", "Index", "Resources", null, new AjaxOptions { }, null)
                </div>
            }
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
